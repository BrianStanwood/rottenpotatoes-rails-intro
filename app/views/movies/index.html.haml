-#  This file is app/views/movies/index.html.haml
%h1 All Movies


  
%table#movies
  %thead
    %tr
      %th{:class => @highlightTitle}= link_to "Movie Title",  movies_title_header_path(sort_by: :movie_title) , :id => "title_header" 
      %th Rating
      %th{:class => @highlightReleaseDate}= link_to "Release Date", movies_release_date_header_path(sort_by: :movies_release_date ) , :id => "release_date_header"
      %th More Info
  %tbody
    -  @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)


= link_to 'Add new movie', new_movie_path



